{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "es2017"],
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules"]
}
