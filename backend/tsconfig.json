{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "lib": ["dom", "es2017"],
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "exclude": ["node_modules"]
}
